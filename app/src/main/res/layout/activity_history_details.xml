<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/header_layout_back"
            layout="@layout/header_back" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/lbl_header_shipment_details"
            android:textSize="@dimen/header_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/edittext_margin"
            android:src="@drawable/ic_info" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ship Date"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_ship_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/11/1017"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="@dimen/edittext_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tracking Number"
                        android:textColor="@color/colorRed" />

                    <TextView
                        android:id="@+id/tv_tracking_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12111017"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/drawable_btn"
                    android:text="@string/btn_track_now"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_from_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual R Pebbles"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tv_from_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="102 Arlington Heights, iilions"
                    android:textColor="@color/colorYellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_to_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harshada Borse"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tv_to_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="102 Arlington Heights, iilions"
                    android:textColor="@color/colorYellow" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrier"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_carrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FedEx"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Type"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FedEx"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Drop"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_pickup_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Drop"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Type"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_package_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Package"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Of Packages"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_no_of_packages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00 lb/ 5.2 kg"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/edittext_margin"
                 android:background="@color/colorWhite"
                 android:orientation="vertical"

                 android:padding="@dimen/edittext_margin">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Dimension"
                     android:textColor="@color/colorRed" />

                 <TextView
                     android:id="@+id/tv_dimension"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="10cmx20cm"
                     android:textColor="@color/colorBlack" />

             </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"

                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Service"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_selected_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:id="@+id/tv_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="102 Arlington Heights, iilions"
                    android:textColor="@color/colorYellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edittext_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/edittext_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_proceed_to_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_margin"
                android:background="@drawable/drawable_btn"
                android:text="@string/btn_proceed_to_payment"
                android:textAllCaps="false"
                android:layout_gravity="bottom"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>


