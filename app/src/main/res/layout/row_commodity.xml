<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/size_5"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_commodity_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="@string/hint_commodity_description"/>
            <TextView
                android:id="@+id/tv_customs_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="@string/lbl_customs_value"/>
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="@string/hint_quantity"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="@string/lbl_weight"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/size_5"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/size_35"
                android:src="@drawable/edit"
                android:layout_height="@dimen/size_35" />
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>